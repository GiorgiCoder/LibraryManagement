@model Library.ViewModels.CreateEmailTemplateViewModel

@{
    ViewData["Title"] = "Create Email Template";
}

<div class="email-template-container">
    <form method="post">
        <div class="form-group">
            <label asp-for="From">From:</label>
            <input type="email" class="form-control" asp-for="From" />
        </div>

        <div class="form-group">
            <label asp-for="Subject">Subject:</label>
            <input type="text" class="form-control" asp-for="Subject" />
        </div>

        <div class="form-group">
            <label asp-for="Body">Body:</label>
            <textarea id="tinyMceEditor" class="form-control" asp-for="Body">@Model.Body</textarea>
        </div>
        <div class="button-center">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>

@section Scripts {
    <script src="./lib/tinymce/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: '#tinyMceEditor',
            license_key: 'gpl|7l6q21h7asx60bypotkj2ips01t98u6i2h30ewihetmsw08i'
        });
    </script>
}
