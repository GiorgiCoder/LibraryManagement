@model IEnumerable<Library.Service.Dtos.Book.BookDto>

<div class="my-container">
    <div class="my-header">
        <a href="@Url.Action("Create", "Book")" class="btn btn-add" id="add-book-btn">Add Book</a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="thead-light">
            <tr>
                <th>Title</th>
                <th>Edition</th>
                <th>Year</th>
                <th>Quantity</th>
                <th>Publisher</th>
                <th>Authors</th>
                
            </tr>
        </thead>
        <tbody id="bookTable">
            @foreach (var book in Model)
            {
                <tr class="clickable-row" onclick="window.location='@Url.Action("Details", "Book", new { id = book.Id })';">
                    <td>@book.Title</td>
                    <td>@book.Edition</td>
                    <td>@book.PublishYear</td>
                    <td>@book.Quantity</td>
                    <td>@(book.PublisherDto == null ? "--------" : book.PublisherDto.Name)</td>
                    <td style="font-size: 16px;">
                        @foreach (var author in book.AuthorsDto)
                        {
                            <p>@author.FullName</p>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>