<div class="custom-modal" id="authorModal" tabindex="-1" role="dialog" aria-labelledby="addBookModalLabel" aria-hidden="true">
    <div class="custom-modal-dialog" role="document">
        <div class="custom-modal-content">
            <div class="custom-modal-header">
                <h4 class="custom-modal-title" id="modalTitle"></h4>
                <button type="button" class="custom-close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="custom-modal-body" id="modalBody">
                <!-- body will be loaded here. It depends on action (create/edit) -->
            </div>
            <div class="custom-modal-footer">
                <button type="submit" id="add-button" form="createBookForm" class="btn btn-primary">Save</button>
                <button type="submit" id="edit-button" form="editBookForm" class="btn btn-primary">Edit</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // create author modal
        $(document).ready(function () {
            $('#add-author-btn').click(function (e) {
                e.preventDefault();
                $.ajax({
                    url: '/Author/Create',
                    type: 'GET',
                    success: function (data) {
                        $('#modalBody').html(data);
                        $('#modalTitle').text('Add Author');
                        $('#add-button').show();
                        $('#edit-button').hide();
                        $('#authorModal').fadeIn();
                    },
                    error: function () {
                        alert('Error loading the form');
                    }
                });
            });

            $(document).on('submit', '#createAuthorForm', function (e) {
                e.preventDefault();
                var form = $(this);
                $.ajax({
                    url: '/Author/Create',
                    type: form.attr('method'),
                    data: form.serialize(),
                    success: function (response) {
                        if (response.success) {
                            $('#authorModal').fadeOut();
                            location.reload();
                        } else {
                            $('#authorModal').fadeOut();
                            location.reload();
                        }
                    },
                    error: function () {
                        alert('Error saving the author');
                    }
                });
            });

            // edit author modal
            $('.btn-edit-author').click(function (e) {
                e.stopPropagation(); // to not to go to link when clicking button which is above it
                e.preventDefault();
                var authorId = $(this).data('author-id');
                $.ajax({
                    url: '/Author/Edit/' + authorId,
                    type: 'GET',
                    success: function (data) {
                        $('#modalBody').html(data);
                        $('#modalTitle').text('Edit Author');
                        $('#add-button').hide();
                        $('#edit-button').show();
                        $('#authorModal').fadeIn();
                    },
                    error: function () {
                        alert('Error loading the form');
                    }
                });

                $(document).on('submit', '#editAuthorForm', function (e) {
                    e.preventDefault();
                    var form = $(this);
                    var authorId = $(this).data('author-id');
                    $.ajax({
                        url: '/Author/Edit/' + authorId,
                        type: form.attr('method'),
                        data: form.serialize(),
                        success: function (response) {
                            if (response.success) {
                                $('#authorModal').fadeOut();
                                location.reload();
                            } else {
                                $('#authorModal').fadeOut();
                                location.reload();
                            }
                        },
                        error: function () {
                            alert('Error updating the author');
                        }
                    });
                });
            });

            // close form modal
            $(document).on('click', '.custom-close', function () {
                $('#authorModal').fadeOut();
            });
        });

    </script>
} *@