@model IEnumerable<Library.ViewModels.Authors.AuthorViewModel>

<div class="authors-container">
    <div class="author-header">
        <a href="" class="btn btn-add-author" id="add-author-btn">Add Author</a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="thead-light">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th id="period-header">
                    Period
                    <span class="sort-arrows">
                        <span class="arrow up" onclick="sortTableByStartDate(true, false, 2)">▲</span>
                        <span class="arrow down" onclick="sortTableByStartDate(false, false, 2)">▼</span>
                    </span>
                </th>
                <th># of Books in Library</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="authorTable">
            @foreach (var author in Model)
            {
                <tr class="clickable-row" onclick="window.location='@Url.Action("Details", "Author", new { id = author.Id })';">
                    <td>@author.Name @author.Surname</td>
                    <td>@(author.Email == null ? "--------" : author.Email)</td>
                    <td style="font-size: 16px;">
                        @author.BirthYear - @(author.DeathYear.HasValue ? author.DeathYear.Value.ToString() : "")
                    </td>
                    <td>@author.BookCount</td>
                    <td><a href="" class="btn btn-edit-author" data-author-id="@author.Id">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="custom-modal" id="authorModal" tabindex="-1" role="dialog" aria-labelledby="addAuthorModalLabel" aria-hidden="true">
    <div class="custom-modal-dialog" role="document">
        <div class="custom-modal-content">
            <div class="custom-modal-header">
                <h4 class="custom-modal-title" id="modalTitle"></h4>
                <button type="button" class="custom-close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="custom-modal-body" id="modalBody">
                <!-- body will be loaded here. It depends on action (create/edit) -->
            </div>
            <div class="custom-modal-footer">
                <button type="submit" id="add-button" form="createAuthorForm" class="btn btn-primary">Save</button>
                <button type="submit" id="edit-button" form="editAuthorForm" class="btn btn-primary">Edit</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // create author modal
        $(document).ready(function () {
            $('#add-author-btn').click(function (e) {
                e.preventDefault();
                $.ajax({
                    url: '/Author/Create',
                    type: 'GET',
                    success: function (data) {
                        $('#modalBody').html(data);
                        $('#modalTitle').text('Add Author');
                        $('#add-button').show();
                        $('#edit-button').hide();
                        $('#authorModal').fadeIn();
                    },
                    error: function () {
                        alert('Error loading the form');
                    }
                });
            });

            $(document).on('submit', '#createAuthorForm', function (e) {
                e.preventDefault();
                var form = $(this);
                $.ajax({
                    url: '/Author/Create',
                    type: form.attr('method'),
                    data: form.serialize(),
                    success: function (response) {
                        if (response.success) {
                            $('#authorModal').fadeOut();
                            location.reload();
                        } else {
                            $('#authorModal').fadeOut();
                            location.reload();
                        }
                    },
                    error: function () {
                        alert('Error saving the author');
                    }
                });
            });

            // edit author modal
            $('.btn-edit-author').click(function (e) {
                e.stopPropagation(); // to not to go to link when clicking button which is above it
                e.preventDefault();
                var authorId = $(this).data('author-id');
                $.ajax({
                    url: '/Author/Edit/' + authorId,
                    type: 'GET',
                    success: function (data) {
                        $('#modalBody').html(data);
                        $('#modalTitle').text('Edit Author');
                        $('#add-button').hide();
                        $('#edit-button').show();
                        $('#authorModal').fadeIn();
                    },
                    error: function () {
                        alert('Error loading the form');
                    }
                });

                $(document).on('submit', '#editAuthorForm', function (e) {
                    e.preventDefault();
                    var form = $(this);
                    var authorId = $(this).data('author-id');
                    $.ajax({
                        url: '/Author/Edit/' + authorId,
                        type: form.attr('method'),
                        data: form.serialize(),
                        success: function (response) {
                            if (response.success) {
                                $('#authorModal').fadeOut();
                                location.reload();
                            } else {
                                $('#authorModal').fadeOut();
                                location.reload();
                            }
                        },
                        error: function () {
                            alert('Error updating the author');
                        }
                    });
                });
            });

            // close form modal
            $(document).on('click', '.custom-close', function () {
                $('#authorModal').fadeOut();
            });
        });

    </script>
}